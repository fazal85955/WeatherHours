<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="?attr/actionBarSize"
    android:paddingStart="@dimen/smallMargin"
    android:paddingEnd="@dimen/smallMargin"
    android:layout_marginBottom="@dimen/smallMargin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CityListFragment">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/smallMargin"
        android:id="@+id/cTitle"
        style="@style/H5"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:text="@string/dialogSub"
        android:paddingBottom="@dimen/smallMargin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="@dimen/smallMargin"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/card_art"
            android:id="@+id/cityList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</android.support.constraint.ConstraintLayout>